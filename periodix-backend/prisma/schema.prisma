generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String                     @id @default(uuid())
  createdAt                 DateTime                   @default(now())
  updatedAt                 DateTime                   @updatedAt
  username                  String                     @unique
  hashedPassword            String?
  untisSecretCiphertext     Bytes?
  untisSecretNonce          Bytes?
  untisSecretKeyVersion     Int?                       @default(1)
  displayName               String?
  sharingEnabled            Boolean                    @default(true)
  isUserManager             Boolean                    @default(false)
  timezone                  String                     @default("Europe/Berlin")
  hiddenSubjects            Json?
  onboardingCompleted       Boolean                    @default(false)
  exams                     Exam[]
  homework                  Homework[]
  absences                  Absence[]
  lessonColors              LessonColorSetting[]
  notifications             Notification[]
  notificationSettings      NotificationSettings?
  notificationSubscriptions NotificationSubscription[]
  sessions                  SessionToken[]
  timetables                Timetable[]
  sharingWith               TimetableShare[]           @relation("UserSharingWith")
  sharedWithBy              TimetableShare[]           @relation("UserSharedWithBy")
  activities                UserActivity[]
}

model Timetable {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  ownerId    String
  rangeStart DateTime?
  rangeEnd   DateTime?
  payload    Json
  owner      User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model ClassTimetableCache {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  classId   Int

  // Cached JSON payload for Untis class timetable
  rangeStart DateTime?
  rangeEnd   DateTime?
  payload    Json

  @@index([classId, createdAt])
  @@index([classId, rangeStart, rangeEnd, createdAt])
}

model SessionToken {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LessonColorSetting {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  lessonName String
  color      String
  offset     Float    @default(0.5)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonName])
}

model DefaultLessonColor {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  lessonName String   @unique
  color      String
  offset     Float    @default(0.5)
}

model TimetableShare {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  ownerId      String
  sharedWithId String
  owner        User     @relation("UserSharingWith", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith   User     @relation("UserSharedWithBy", fields: [sharedWithId], references: [id], onDelete: Cascade)

  @@unique([ownerId, sharedWithId])
}

model AppSettings {
  id                   String   @id @default(uuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  globalSharingEnabled Boolean  @default(true)
}

model Homework {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  untisId   Int
  userId    String
  lessonId  Int?
  date      Int
  subjectId Int
  subject   String
  text      String
  remark    String?
  completed Boolean  @default(false)
  fetchedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, untisId])
}

model Exam {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  untisId   Int
  userId    String
  date      Int
  startTime Int
  endTime   Int
  subjectId Int
  subject   String
  name      String
  text      String?
  teachers  Json?
  rooms     Json?
  fetchedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, untisId])
}

model WhitelistRule {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  value     String   @unique
}

model AccessRequest {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  username  String   @unique
  message   String?
}

model Notification {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  type      String
  title     String
  message   String
  data      Json?
  read      Boolean   @default(false)
  sent      Boolean   @default(false)
  expiresAt DateTime?
  dedupeKey String?   @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([type, createdAt])
}

model NotificationSettings {
  id                          String   @id @default(uuid())
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  userId                      String   @unique
  browserNotificationsEnabled Boolean  @default(true)
  pushNotificationsEnabled    Boolean  @default(false)
  timetableChangesEnabled     Boolean  @default(true)
  accessRequestsEnabled       Boolean  @default(true)
  irregularLessonsEnabled     Boolean  @default(true)
  cancelledLessonsEnabled     Boolean  @default(true)
  devicePreferences           Json?
  cancelledLessonsTimeScope   String   @default("day")
  irregularLessonsTimeScope   String   @default("day")
  upcomingLessonsEnabled      Boolean  @default(false)
  absencesEnabled             Boolean  @default(false)
  user                        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NotificationSubscription {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  endpoint   String   @unique
  p256dh     String
  auth       String
  userAgent  String?
  deviceType String?
  active     Boolean  @default(true)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, active])
}

model AdminNotificationSettings {
  id                               String   @id @unique @default(uuid())
  createdAt                        DateTime @default(now())
  updatedAt                        DateTime @updatedAt
  timetableFetchInterval           Int      @default(30)
  enableTimetableNotifications     Boolean  @default(true)
  enableAccessRequestNotifications Boolean  @default(true)
}

model UserActivity {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String
  action    String
  details   Json?
  ipAddress String?
  userAgent String?
  sessionId String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([createdAt])
}

model DailyStats {
  id                 String @id @default(uuid())
  date               String @unique
  totalUsers         Int    @default(0)
  activeUsers        Int    @default(0)
  newUsers           Int    @default(0)
  uniqueLogins       Int    @default(0)
  totalLogins        Int    @default(0)
  timetableViews     Int    @default(0)
  searchQueries      Int    @default(0)
  settingsOpened     Int    @default(0)
  colorChanges       Int    @default(0)
  avgSessionDuration Float?
  peakHour           Int?

  @@index([date])
}

model HourlyStats {
  id             String @id @default(uuid())
  date           String
  hour           Int
  activeUsers    Int    @default(0)
  logins         Int    @default(0)
  timetableViews Int    @default(0)
  searchQueries  Int    @default(0)

  @@unique([date, hour])
  @@index([date, hour])
}

model Absence {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  untisId   Int
  userId    String
  startDate Int
  endDate   Int
  startTime Int?
  endTime   Int?
  reason    String?
  isExcused Boolean  @default(false)
  fetchedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, untisId])
}
