# Backend environment variables
# Copy to .env and adjust

# Postgres connection string used by Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/untis_pro?schema=public"

# JWT secret for signing tokens
JWT_SECRET="change-me"

# CORS origin for frontend dev server
CORS_ORIGIN="http://localhost:5173"

# Port for backend
PORT=3001

# Default Untis settings
UNTIS_DEFAULT_SCHOOL=
UNTIS_HOST=

# Admin credentials (optional)
# When set, logging in with these will return an admin JWT for managing users.
UNTIS_ADMIN_USERNAME=
UNTIS_ADMIN_PASSWORD=
